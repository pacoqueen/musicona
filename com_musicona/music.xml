<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
  <name>Musicona</name>

  <creationDate>Mar 2012</creationDate>
  <author>Francisco José Rodríguez Bogado</author>
  <authorEmail>bogado@qinn.es</authorEmail>
  <authorUrl>http://qinn.es</authorUrl>
  <copyright>Francisco José Rodríguez Bogado 2012</copyright>
  <license>GPL V3 or later</license>
  <version>0.9a</version>
  <description>Musicona component (forked from Music manager component)</description>

  <install>
    <sql>
      <file charset="utf8" driver="mysql">install.mysql.sql</file>
    </sql>
  </install>

  <uninstall>
    <sql>
      <file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
    </sql>
  </uninstall>

  <languages>
    <language tag="en-GB">en-GB.com_musicona.ini</language>
    <language tag="es-ES">es-ES.com_musicona.ini</language>
  </languages>

  <files>
    <filename>index.html</filename>
    <filename>controller.php</filename>
    <filename>music.php</filename>
    <filename>musicona.php</filename>
    <folder>models</folder>
    <filename>router.php</filename>
    <filename>metadata.xml</filename>
    <folder>views</folder>
    <folder>images</folder>
  </files>

  <administration>
    <menu>Musicona</menu>
    <submenu>
      <menu link="option=com_musicona">Songs</menu>
      <menu link="option=com_musicona&amp;c=albums">Albums</menu>
      <menu link="option=com_musicona&amp;c=artists">Artists</menu>
    </submenu>

    <files folder="admin">
      <folder>tables</folder>
      <filename>music.php</filename>
      <filename>musicona.php</filename>
      <folder>elements</folder>
      <folder>models</folder>
      <folder>views</folder>
      <filename>config.xml</filename>
      <folder>controllers</folder>
      <filename>index.html</filename>
      <filename>install.mysql.sql</filename>
      <filename>uninstall.mysql.sql</filename>
    </files>

  </administration>
</install>
